    <style name="NabActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ele_actionbar</item>
    </style>
    <style name="NabTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:textColor">@color/android_green</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/nab_tab_indicator</item>
        <item name="background">@drawable/nab_tab_indicator</item>
        <item name="backgroundSplit">@drawable/nab_tab_indicator</item>
        <item name="backgroundStacked">@drawable/nab_tab_indicator</item>
    </style>
    <style name="NabActionMode" parent="@style/Widget.Sherlock.Light.ActionMode">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/orangebar</item>
    </style>
    <style name="HomeButtonTextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">70.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="HomeButtonTextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="HomeButtonTextPhone" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HomeButtonTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="EditTextBackground">
        <item name="android:gravity">center</item>
    </style>
    
    
    <style name="theme_fullscreen" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="sliding_menu_item">
        <item name="android:textSize">20.0sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">30.0dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/slide_menu_color_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="green_button">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="lv_bg_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="text_time_style">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_style">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_item_style">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="layout_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
    </style>

    <style name="edit_style">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="layout_home_lv_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bank_edt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="card_text">
        <item name="android:layout_width">85dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/setting_black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="a_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/left</item>
    </style>

    <style name="user_info_detail_item">
        <item name="android:paddingLeft">9.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:paddingBottom">15.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="user_info_detail_name">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">left</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">100.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/left</item>
    </style>

