<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menull"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sliding_menu_item_background"
    android:drawablePadding="20.0dip"
    android:gravity="right|center"
    android:paddingBottom="17.0dip"
    android:paddingLeft="13.0dip"
    android:paddingRight="20.0dip"
    android:paddingTop="13.0dip" >

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:text="@string/toggle_cashcredit"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:src="@drawable/ic_menu_getpaid" />

</LinearLayout>