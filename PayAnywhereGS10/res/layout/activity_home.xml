<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0">
    <LinearLayout
        android:gravity="center"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_launch_std"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_sell"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_weight="0.25"
        android:background="@drawable/home_button"
        android:gravity="center"
        android:onClick="onSellClick" >

        <TextView
            android:id="@+id/home_sell_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sell"
            android:drawableLeft="@drawable/ic_launch_cart"
            style="@style/HomeButtonTextMedium"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:baselineAligned="false"
        android:layout_weight="0.2">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/home_inventory"
            android:background="@drawable/home_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:onClick="onInventoryClick">
            <ImageView
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/ic_launch_inventory"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/home_inventory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory"
                style="@style/HomeButtonTextSmall"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_reports"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/home_button"
            android:gravity="center"
            android:onClick="onReportsClick" >

            <ImageView
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/ic_launch_reports"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/home_reports_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reports"
                style="@style/HomeButtonTextSmall"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.25">

        <ImageButton
            android:id="@+id/home_on_setting"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_gravity="bottom|right|center"
            android:background="@null"
            android:onClick="onSettingClick"
            android:scaleType="fitCenter"
            android:src="@drawable/element_gears_std" />

    </LinearLayout>
</LinearLayout>