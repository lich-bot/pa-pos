<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10.0dip"
    android:shrinkColumns="0"
    android:stretchColumns="1,2" >

    <TableRow
        android:id="@+id/quantityRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/gripper"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:text="@string/items_in_cart"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/quantityValue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="right"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/subtotalRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/gripper"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/subtotalValueLabel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:text="@string/subtotal"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/subtotalValue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text="@string/default_money_no_sign"
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/taxRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/gripper"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/taxValueLabel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text="@string/tax"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/taxValue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:paddingRight="4.0dip"
            android:singleLine="true"
            android:text="@string/default_money_no_sign"
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/discountRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/discount_gripper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/gripper" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:text="@string/discount"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/discountValue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:paddingRight="20.0dip"
            android:singleLine="true"
            android:text="@string/default_money_no_sign"
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/tipRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/gripper"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tipValueLabel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:text="@string/tip"
            android:textAppearance="?android:textAppearanceMedium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tipValue"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text="@string/default_money_no_sign"
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/transactTotalRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:src="@drawable/gripper"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/totalValueLabel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:text="@string/total_value_label"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/totalValueTransact"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text="@string/default_money"
            android:textAppearance="?android:textAppearanceMedium" />
    </TableRow>

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/default_money"
        android:textSize="45.0dip" />

</TableLayout>