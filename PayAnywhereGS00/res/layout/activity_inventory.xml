<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.viewpagerindicator.TitlePageIndicator
        android:textSize="18.0dip"
        android:textColor="@color/android_thick_orange"
        android:id="@+id/inventory_indicator"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:selectedColor="@color/android_thick_orange"
        app:footerColor="@color/android_thick_orange"
        app:footerLineHeight="1.0dip"
        app:footerIndicatorStyle="triangle"
        app:footerIndicatorHeight="3.0dip"
        app:selectedBold="true" />
    <android.support.v4.view.ViewPager
        android:id="@+id/inventory_pager"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />
</LinearLayout>